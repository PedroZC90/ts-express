{
    "verbose": true,
    "restartable": "rs",
    "delay": 300,
    "ignore": [
        ".git",
        "docs",
        "dist",
        "node_modules"
    ],
    "watch": [
        "src"
    ],
    "ext": "ts",
    "env": {
        "NODE_ENV": "development",
        "CONCURRENCY": 8
    },
    "execMap": {
        "ts": "node --inspect -r ts-node/register"
    }
}
